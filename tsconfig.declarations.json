{
	"compilerOptions": {
		"target": "es6",
		"module": "amd",
		"moduleResolution": "node",
		"declaration": true,
		"emitDeclarationOnly": true,
		"outFile": "./dist/index.d.ts",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["dom", "es2019", "dom.iterable"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
} 